{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "events": {
    "restart": "echo 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "node_modules/",
    "src/",
    "*.js"
  ],
  "env": {
    "OZRA_ENV": "dev",
    "OZRA_PORT": 2049,
    "OZRA_VERBOSE": true
  },
  "script": "src/main.js",
  "options": {
    "extensions": ["js"],
    "exec": "node"
  }
}